@model ChoiceModel

@{
    var controlId = Model.BuildControlId();
}

<input type="date"
       value='@(Model.SelectedDate != null ? ((DateTime)Model.SelectedDate).ToString("yyyy-MM-dd") : DateTime.UtcNow.ToString("yyyy-MM-dd"))'
       attr-disabled='(Model.IsDisabled, "disabled")'
       name="@(controlId)-date" id="@(controlId)-date"
       class="form-control native-validation"
       min="@DateTime.Now.ToString("yyyy-MM-dd")"
       max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" />